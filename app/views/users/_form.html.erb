<div class="well"><div class="container">
<div class="row">
  <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
  <fieldset>
    <legend><%= legend %></legend>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-xs-1 col-sm-1 col-md-1 control-label", for: "inputName" %>
    <div class="col-xs-11 col-sm-7 col-md-5">
    <%= f.text_field :name, class: "form-control", id: "inputName" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-xs-1 col-sm-1 col-md-1 control-label", for: "inputPassword" %>
    <div class="col-xs-11 col-sm-7 col-md-5">
    <%= f.password_field :password, class: "form-control", id: "inputPassword" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :age, class: "col-xs-1 col-sm-1 col-md-1 control-label", for: "inputAge" %>
    <div class="col-xs-11 col-sm-7 col-md-5">
    <%= f.select :age, [["1", 1], ["2", 2], ["3", 3], ["4", 4]],{include_blank: true}, {class: 'form-control', id: "inputAge" } %>
    </div>
  </div>
  <div class="actions form-group">
    <div class="col-xs-1 col-sm-1 col-md-1"></div>
    <div class="col-xs-11 col-sm-7 col-md-5">
    <%= button_tag type: "submit", class: 'btn btn-success btn-sm' do %>
      <%= icon 'save' %>
      <span> Save</span>
    <% end %>
    </div>
  </div>
</fieldset>
<% end %>
</div>
</div>
</div>
